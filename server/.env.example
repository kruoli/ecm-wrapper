# Database password for PostgreSQL
DB_PASSWORD=change-this-to-a-strong-password

# Secret key for API cryptographic operations (generate with: openssl rand -hex 32)
SECRET_KEY=change-this-to-a-random-64-character-hex-string

# Admin API key for accessing admin dashboard and endpoints (generate with: openssl rand -hex 32)
ADMIN_API_KEY=change-this-to-a-random-64-character-hex-string

# Optional: API port (defaults to 8000)
API_PORT=8000

# Optional: T-level binary path (defaults to /app/bin/t-level in Docker)
# T_LEVEL_BINARY_PATH=/app/bin/t-level

# For development with external PostgreSQL (not needed for docker-compose)
# DATABASE_URL=postgresql://ecm_user:ecm_password@localhost:5432/ecm_distributed